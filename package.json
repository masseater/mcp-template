{
  "name": "mcp-template",
  "version": "0.0.1",
  "description": "MCP サーバー開発のための汎用テンプレート",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-template": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "dev:http": "HTTP=1 bun run src/index.ts",
    "build": "tsup",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "bun run build --dts-only",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "latest",
    "tsup": "^8.5.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "hono": "^4.11.3",
    "neverthrow": "^8.2.0",
    "zod": "^4.3.4"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "claude"
  ],
  "license": "MIT"
}
